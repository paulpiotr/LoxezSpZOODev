@model LoxezSpZOOContext.Models.KoszykElement

@{
    ViewData["Title"] = "Dodaj Do Koszyka";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Dodaj Do Koszyka</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajDoKoszyka">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KoszykNaglowekId" class="control-label"></label>
                <input asp-for="KoszykNaglowekId" class="form-control" />
                <span asp-validation-for="KoszykNaglowekId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilosc" class="control-label"></label>
                <input asp-for="Ilosc" class="form-control" type="number" step="any" min="0" />
                <span asp-validation-for="Ilosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" type="number" step="any" min="0" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwTowarTwId" class="control-label"></label>
                <input asp-for="TwTowarTwId" class="form-control" />
                <span asp-validation-for="TwTowarTwId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="DodajDoKoszyka" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
